#include<stdio.h>
int main()
{
    int units;
    float bill, surcharge, total;
    scanf("%d",&units);
    if(units<200)
        bill=units*1.20;
    else if(units<400)
        bill=units*1.50;
    else if(units<600)
        bill=units*1.80;
    else
        bill=units*2.00;
    if(bill>400)
        surcharge=bill*0.15;
    else
        surcharge=100.00;
    total=bill+surcharge;
    printf("%.2f",total);
    return 0;
}
